head
  title EText | Reset password
  link(rel='shortcut icon' href='/img/icon.png')
  meta(name='viewport' content='width=device-width, user-scalable=no')
  // CSS Imports
  link(rel='stylesheet' href='/css/index.css')
  link(rel='stylesheet' href='/css/reset.css')
  // Fonts
  link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;1,300;1,400&display=swap')
body
  header
    div.left
      a(href='/')
        img(src='/img/icon-clear.png')#icon
      span#title
        h1 EText
        h2 Formal, yet efficient
    div.right.desktopOnly
      span#menu
        a(href='/login').un Login
  main
    form(action='/api/user/reset/'+token method='POST')#dialogue
      h1 New password
      hr.medium
      input(type='password' name='password' placeholder='New password')
      input(type='password' name='confirm' placeholder='Confirm password')
      button(type='submit') Reset password
  footer
    script(src='/js/index.js')
