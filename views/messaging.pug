head
  title EText | Messaging
  link(rel='shortcut icon' href='/img/icon-light-background.png')
  meta(name='viewport' content='width=device-width, user-scalable=no')
  // CSS Imports
  link(rel='stylesheet' href='/css/index.css')
  link(rel='stylesheet' href='/css/messaging.css')
  // Fonts & Icons
  link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;1,300;1,400&display=swap')
  script(src='https://kit.fontawesome.com/9ff649492a.js' crossorigin='anonymous')
body
  nav#menu.closed
    form(action='api/user/logout' method='POST')#logout
      button(type='submit') Logout
    section#menu-header
      h1 Chats
      button#close(onclick='toggleMenu("closed");')
        i(class='fa fa-times')
    div.chat
      h1 Bob
      h3 This is the last message
  main
    section#chat-header
      a(onclick='toggleMenu("open");')#nav-button
        i(class='fa fa-bars')
    section#chat-screen
    form(action='/api/message/send')#textbox
      input(type='text')
      button(type='submit') Send   
  footer
    script(src='/js/index.js')
